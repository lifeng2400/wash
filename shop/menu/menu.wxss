/*logo*/
.logo {
	width: 80px;
	height: 80px;
	border-radius: 3px;
  margin: 0 10px;
  float: left;
}

/*店名与公告*/
.banner {
	color: #fff;
	display: flex;
	flex-direction: column;
	margin-top: 5px;
  flex: 1;
  float: left;
}

/*店名*/
.seller {
	font-weight: bold;
	font-size: 18px;
}

/*公告*/
.notice {
	margin-top: 5px;
	font-size: 12px;
}

/*营业时间*/
.business-time {
	margin-top: 5px;
	font-size: 12px;
}

.totalcontainer {
  height: 100%;
  z-index: -1;
}

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: grey;
  z-index: 0;
  opacity: 0.7;
}

.heard-search {
  font-size: 25rpx;
  margin-right: 20rpx;
  height: 40rpx;
  width: 400rpx;
  display: flex;
  align-items: center;
  background: white;
  border-radius: 20rpx;
  line-height: 40rpx;
}

.restaurantTitle{
  font-size: 35rpx;
  line-height: 60rpx;
}

.heard-search-icon {
  height: 30rpx;
  width: 30rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
}
.heard-clear-icon {
  height: 30rpx;
  width: 30rpx;
}

.allFood {
  justify-content: space-between;
  /* display: inline-flex; */
  display: flex;
  flex-direction: row;
}

.restaurantHeader {
  width: 100%;
  background: #ffd161;
  height: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.menuList {
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.menuList .menu {
  height: 100rpx;
  width: 95%;
  position: relative;
  text-align: center;
  line-height: 100rpx;
  font-size: 28rpx;
  background: #fff;
  border-bottom: 1px solid #ededed;
}
.selected.menu::before {
  content: "";
  position: absolute;
  left: -1rpx;
  top: 4rpx;
  height: 90%;
  width: 8rpx;
  background: #4CAF50;
}

.orderPage-sideBar {
  /* width: 150rpx; */
  width: 100%;
  height: 100%;
  background: #f4f4f4;
}

.foodList {
  flex: 1;
  display: flex;
  flex-direction: column;
  height: 100%;
  background: #ececec;
}

.foodList .title {
  padding: 25rpx;
  height: 25rpx;
  line-height: 25rpx;
  font-size: 25rpx;
  background: #fff;
  color: #2196F3;
}

.food {
  position: relative;
  display: flex;
  align-items: center;
  height: 170rpx;
  border-bottom: 1rpx solid #ececec;
  background: white;
}

.food::before {
  content: "";
  width: 15rpx;
  height: 100%;
  left: -15rpx;
  top: 0;
  border: 2rpx solid white;
}

.food .img {
  width: 130rpx;
  height: 130rpx;
}

.food-info {
  padding-left: 185rpx;
  line-height: 48rpx;
  /* flex: 4; */
  position: absolute;
 
}

.food .name {
  font-size: 30rpx;
  line-height: 35rpx;
}

.food .sales {
  font-size: 25rpx;
  color: #acacac;
}

.food .price {
  font-size: 30rpx;
  color: red;
}

.food-numb {
  height: 40rpx;
  width: 130rpx;
  display: flex;
  justify-content: flex-end;
  /* margin-top: 95rpx; */
  /* margin-right: 30rpx; */
  line-height: 48rpx;
  font-size: 25rpx;
  line-height: 48rpx;
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
}

.food-numb .add, .food-numb .remove {
  width: 40rpx;
  height: 40rpx;
  border-radius: 30rpx;
  text-align: center;
}

.food-numb .add {
  font-size: 35rpx;
  line-height: 37rpx;
  font-weight: 700;
  background: #F44336;
  margin-left: 15rpx;
}

.food-numb .remove {
  margin-right: 15rpx;
  line-height: 28rpx;
  font-size: 60rpx;
  font-weight: 500;
  box-sizing: border-box;
  border: 2rpx;
  border-style: solid;
  border-color: #b0b0b0;
  color: #b0b0b0;
}

.footer .imgCar {
  position: absolute;
  height: 90rpx;
  width: 90rpx;
  border-radius: 100rpx;
  left: 20rpx;
  top: -15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.footer .clearCar {
  position: absolute;
  background: #4CAF50;
  height: 45rpx;
  width: 100rpx;
  border-radius: 20rpx;
  left: 10rpx;
  top: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 25rpx;
}
.footer.active .free {
  font-size: 25rpx;
  /* width: 100rpx; */
  padding-top: 0rpx;
  height: 40rpx;
  line-height: 40rpx;
}

.footer .free {
  font-size: 25rpx;
  /* width: 100rpx; */
  /* padding-top: 30rpx; */
  height: 40rpx;
  line-height: 40rpx;
}

.footer .pay {
  width: 220rpx;
  text-align: center;
  line-height: 80rpx;
  color: white;
  font-size: 30rpx;
  background: #ccc;
}

.footer.active .pay {
  background: #4CAF50;
  color: fff;
}

.footer {
  display: flex;
  position: fixed;
  /* padding-bottom: 10rpx; */
  right: 0;
  z-index:3;
  left: 0;
  background: #ececec;
  bottom: 0rpx;
  height: 80rpx;
}

.howMuch {
  position: relative;
  flex: 1;
  font-size: 28rpx;
  background: white;
  line-height: 100rpx;
  padding-left: 130rpx;
}

.cost {
  margin-top: 10rpx;
  color: red;
  font-size: 30rpx;
  line-height: 30rpx;
  height: 30rpx;
  width: 100rpx;
}

/*购物车选择框 */
.commodity_attr_box {
  /* height: 300rpx; */
  width: 100%;
  overflow: hidden;
  position: fixed;
  /* bottom: -200rpx; */
  left: 0;
  z-index: 2;
  background: #fff;
}

/*弹窗头部*/
.modal-header {
	font-size: 40rpx;
	color: #666;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	line-height: 55rpx;
	padding: 4rpx 10rpx;
	background: #eceff1;
}

/*购物车字样*/
.modal-title {
	text-align: center;
	flex: 1;
}

/*内容区域*/
.modal-body {
	font-size: 28rpx;
}

.modal-body .item {
	align-items: center;
  justify-content: space-between;
  height: 75rpx;
  flex: 1;
  display: flex;
	border-bottom: 1rpx solid #eee;
}

.modal-body .title {
  display: flex;
  flex: 1;
  justify-content: flex-start;
}

/*小计*/
.modal-body .fee {
	color: #ff6000;
  display: flex;
  flex: 1;
  justify-content: flex-start;
}

.modal-body .fee:before {
	content: '￥';
}

.modal-body .food-numb {
  margin-top: 0rpx;
  flex: 1;
}

.kf {
	position: fixed;
  left: 56rpx;
  bottom: 154rpx;
  background-color: #fff;
  border-radius: 50%;
  width: 40px;
  height: 40px;
  text-align: center;
}

.kf-img {
	width: 30px;
  height: 30px;
  line-height: 40px;
  padding-top: 5px;
}


.notice {
  position: absolute;
  z-index: 100;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.box {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  width: 90%;
  background: #fff;
  border-radius: 10px;
  box-shadow: 0 0 50px rgba(22,22,22,.35);
  transform: translate3d(0,0,0);
}
.box-hd {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  border-bottom: 1px solid #eee;
}
.box-title {
  font-size: 13pt;
}
.box-close {
  position: absolute;
  right: 20rpx;
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx;
}
.box-bd {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 15rpx 40rpx 30rpx;
}
.notice-q {
  color: #999;
  font-size: 11pt;
  line-height: 200%;
  margin-top: 5rpx;
}
.notice-a {
  text-indent: 1em;
  line-height: 160%;
  display: flex;
  flex-direction: column;
}
.notice-a text{
  word-break: break-all;
}


.copright
{
  padding: 30rpx;
  color: darkgrey;
  font-size: 25rpx;
  text-align: center;
}


