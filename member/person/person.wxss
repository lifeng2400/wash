
.myHeader{
  height:300rpx;
  width:100%;
  background: url('http://wwx.50cms.com/up/ubg.jpg'); 
  background-size:100%; 
  display: flex;
  align-items: center;
  color:#fff;
  position: relative;
  
}
/* .myHeader image, */
.userinfo-avatar{
  width:120rpx;
  height:120rpx;
  border-radius:50%;
  margin:0 24rpx;
  overflow: hidden
}
.name{
  font-size: 30rpx;
  font-weight: 500;
}
.income{
  display: flex;
  font-size:20rpx;
  margin-top: 20rpx;
}
.income view{
  min-width:100rpx;
  height:36rpx;
  padding:0 10rpx;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.income view:nth-child(1){
  background-color: #fabb51;
  margin-right:26rpx;
}
.income view:nth-child(2){
  background-color: #57bf6a
}
.jfSign{
  width:200rpx;
  height:90rpx;
  font-size: 24rpx;
  background-color: #e62000;
  border-top-left-radius:44rpx;
  border-bottom-left-radius: 44rpx;
  display: flex;
  align-items: center;
  position: absolute;
  right: 0;
}
.jfSign text{
 display: block;
 text-align:center;
}

.jfSign image{
  width:60rpx;
  height:60rpx;
  margin:0 15rpx;
}
/* 我的订单 */
.myOrder{
  background-color: #fff;
  font-size: 24rpx;
  padding-left:24rpx;
}
.orderTitle{
  height:94rpx;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #efeff4;
  padding-right:24rpx;
}
.orderTitle image{
 width:16rpx;
 height:28rpx;
 margin-left:12rpx;
}
.orderTitle text{
 flex:1;
}
.orderTitle view{
  flex:1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  text-align: right;
  color:#c5c5c5;
}
.orderCont{
  height:162rpx;
  display: grid;
  grid-template-columns:repeat(4, 1fr);
  justify-items:center;
  align-items: center;
  font-size: 24rpx;
  color:#282828;
}
.orderCont image{
  display: block;
  width:48rpx;
  height:40rpx;
  margin:18rpx auto;
}
/* 我的服务 */
.myService{
  background-color: #fff;
  margin-top:24rpx;
  font-size: 24rpx;
  padding-left:24rpx;
}
.serviceCont{
  height:206rpx;
  display: grid;
  grid-template-columns:repeat(3, 1fr);
  grid-template-rows:repeat(3,162rpx);
  justify-items:center;
  align-items: center;
  font-size: 24rpx;
  color:#282828;
  padding-right:24rpx;
}
.serviceCont view{
  width:100%;
  text-align: center;
  border-bottom:2rpx solid #efeff4;
  padding-bottom: 24rpx;
}
.serviceCont view:nth-child(7),.serviceCont view:nth-child(8),.serviceCont view:nth-child(9){
  border-bottom:none;
}
.serviceCont image{
  display: block;
  width:50rpx;
  height:50rpx;
  margin:12rpx auto;
}
