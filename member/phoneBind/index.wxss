.main-wrapper {
  padding-top: 20rpx;
  box-sizing: border-box;
}

.info-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  height: 86rpx;
  padding: 0 30rpx;
  margin-bottom: 2rpx;
}

.info-box>text:last-child {
  font-size: 32rpx;
  font-weight: 400;
  color: #333;
}

.info-box input {
  width: 300rpx;
  text-align: left;
}

.lable {
  font-size: 32rpx;
  font-weight: 400;
  color: #999;
}

.tip {
  font-size: 30rpx !important;
  font-weight: 400 !important;
  color: #bbb !important;
  text-align: left !important;
}

.phone-bind {
  width: 156rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: #0c8fff;
  height: 42rpx;
  line-height: 42rpx;
  border-left: 1rpx solid #ebebeb;
  padding-left: 30rpx;
}

.phone-auth {
  background: #fff;
  font-size: 30rpx;
  font-weight: 400;
  height: 42rpx;
  line-height: 42rpx;
  color: #0c8fff;
  justify-content: flex-start;
}

.bind-again {
  font-size: 30rpx;
  font-weight: 400;
  color: #bbb;
  height: 42rpx;
  line-height: 42rpx;
  border-left: 1rpx solid #ebebeb;
  padding-left: 30rpx;
}

.submitBtn {
  width: 520rpx;
  height: 85rpx;
  margin: 30rpx auto 0;
  background: linear-gradient(180deg, rgba(74, 175, 255, 1), rgba(3, 143, 255, 1));
  border-radius: 43rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #fff;
  line-height: 85rpx;
}

.auth-wait {
  width: 520rpx;
  height: 85rpx;
  background: rgba(225, 232, 236, 1);
  border-radius: 43px;
  margin: 30rpx auto 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.auth-wait text {
  font-size: 32rpx;
  font-weight: 400;
  color: #b0b9bf;
}
